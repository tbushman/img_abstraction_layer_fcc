extends layout

block content
  div.container-fluid
    h1.page-header #{title}
    form.gsce-searchbox(data-defaultToImageSearch="true", method="POST", action="/")
      h4 Enter a search phrase
      input.form-control(type="hidden", name="cx", value=""+process.env.CX+"")
      input.form-control(type="hidden", name="ie", value="UTF-8")
      input.form-control(type="text", name="q", size="31")
      input.btn.btn-default.margin(type="submit", name="sa", value="search") 
    img(src="http://cse.google.com/images/google_custom_search_smwide.gif")
    h4 output:
    div.gsce-searchresults(data-defaultToImageSearch="true") #{list}
      
